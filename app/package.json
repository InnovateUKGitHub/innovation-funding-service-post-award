{
  "name": "acc-ui",
  "version": "1.0.0",
  "description": "External frontend for innovate uk acc system",
  "scripts": {
    "clean": "rimraf ./dist",
    "build:server": "webpack --config webpack.server.js",
    "start:server": "node ./dist/server.js",
    "watch:server": "parallelshell \"webpack --config webpack.server.js --watch\" \"nodemon ./dist/server.js\"",
    "build:client": "webpack --config webpack.client.js",
    "watch:client": "webpack --config webpack.client.js --watch",
    "watch": "parallelshell \"webpack --config webpack.client.js --watch\" \"webpack --config webpack.server.js --watch\" \"nodemon ./dist/server.js\"",
    "build": "npm run build:server && npm run build:client",
    "test": "jest",
    "tests": "npm run test",
    "tests:coverage": "npm run test -- --coverage",
    "lint": "tslint --project tsconfig.json src/**/*.ts{,x}",
    "lint:report": "node tslint-report.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-passer": "^1.0.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "jsforce": "^1.9.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "react-router5": "^6.1.0",
    "redux": "^4.0.0",
    "redux-router5": "^6.0.2",
    "redux-thunk": "^2.3.0",
    "router5": "^6.4.1",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/jsforce": "^1.8.13",
    "@types/react": "^16.4.8",
    "@types/react-dom": "^16.0.7",
    "@types/react-redux": "^6.0.6",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/router5": "^5.0.0",
    "enzyme": "^3.4.2",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^23.4.2",
    "jest-html-reporter": "^2.4.2",
    "nodemon": "^1.18.3",
    "parallelshell": "^3.0.2",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-html-report": "^2.0.0",
    "tslint-react": "^3.6.0",
    "tslint-sonarts": "^1.7.0",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "testURL": "http://localhost",
    "reporters": [
      "default",
        ["./node_modules/jest-html-reporter", {
          "pageTitle": "IUK ACC Unit test report"
        }]
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/index.ts"
    ],
    "coverageReporters": ["text", "html"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*(tests|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
