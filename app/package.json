{
  "name": "acc-ui",
  "version": "1.0.0",
  "description": "External frontend for innovate uk acc system",
  "scripts": {
    "build:server": "webpack --config webpack.server.js",
    "start:server": "node ./dist/server.js",
    "watch:server": "parallelshell \"webpack --config webpack.server.js --watch\" \"nodemon ./dist/server.js\"",
    "build:client": "webpack --config webpack.client.js",
    "watch:client": "webpack --config webpack.client.js --watch",
    "watch": "parallelshell \"webpack --config webpack.client.js --watch\" \"webpack --config webpack.server.js --watch\" \"nodemon ./dist/server.js\"",
    "build": "npm run build:server && npm run build:client",
    "test:server": "mocha -r ts-node/register tests/src/server/**/*.ts",
    "mocha": "mocha"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-passer": "^1.0.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "jsforce": "^1.8.5",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router5": "^6.1.0",
    "redux": "^4.0.0",
    "redux-router5": "^6.0.2",
    "redux-thunk": "^2.3.0",
    "router5": "^6.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/jsforce": "^1.8.13",
    "@types/mocha": "^5.2.5",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.5",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/router5": "^5.0.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "parallelshell": "^3.0.2",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2",
    "webpack": "^4.16.2",
    "webpack-command": "^0.4.1",
    "webpack-node-externals": "^1.7.2"
  }
}
