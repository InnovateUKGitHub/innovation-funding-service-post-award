{
  "name": "acc-ui",
  "version": "1.0.0",
  "description": "External frontend for innovate uk acc system",
  "scripts": {
    "clean": "rimraf ./dist",
    "start:server": "node ./dist/src/server/index.js",
    "start:dev": "nodemon ./dist/src/server/index.js --watch ./dist/src/ --watch ./.env",
    "build:server": "rimraf dist/ && tsc",
    "watch:server": "tsc --watch",
    "build:client": "webpack --config webpack.client.js",
    "watch:client": "npm run build:client -- --watch",
    "watch": "parallelshell \"npm run watch:client\" \"npm run watch:server\" ",
    "watch:all": "parallelshell \"npm run watch:client\" \"npm run watch:server\" \"npm run start:dev\" ",
    "build": "npm run build:server && npm run build:client",
    "test": "jest",
    "tests": "npm run test",
    "tests:coverage": "npm run test -- --coverage",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --fix --project tsconfig.json",
    "lint:report": "node tslint-report.js"
  },
  "author": "BJSS Ltd",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "body-parser": "^1.0.0",
    "classnames": "^2.2.6",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "isomorphic-fetch": "^2.2.1",
    "isomorphic-form-data": "^2.0.0",
    "jsforce": "^1.9.1",
    "jsonwebtoken": "^8.3.0",
    "luxon": "^1.3.3",
    "mime-types": "^2.1.21",
    "multer": "^1.4.1",
    "newrelic": "^5.5.0",
    "passport": "^0.4.0",
    "passport-saml": "^0.35.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-redux": "^5.0.7",
    "react-router5": "^6.1.0",
    "redux": "^4.0.0",
    "redux-router5": "^6.0.2",
    "redux-thunk": "^2.3.0",
    "router5": "^6.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/classnames": "^2.2.6",
    "@types/cookie-session": "^2.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/enzyme": "^3.1.17",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.9",
    "@types/jsforce": "^1.9.5",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/luxon": "^1.2.2",
    "@types/mime-types": "^2.1.0",
    "@types/multer": "^1.3.7",
    "@types/passport": "^0.4.7",
    "@types/passport-saml": "^0.15.8",
    "@types/react": "^16.4.8",
    "@types/react-dom": "^16.0.7",
    "@types/react-redux": "^6.0.6",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/router5": "^5.0.0",
    "babel-loader": "^8.0.5",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "jest": "^24.1.0",
    "jest-bamboo-reporter": "^1.2.0",
    "jest-html-reporter": "^2.4.2",
    "nodemon": "^1.18.3",
    "parallelshell": "^3.0.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-html-report": "^2.0.3",
    "tslint-react": "^3.6.0",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "testURL": "http://localhost",
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "IUK ACC Unit test report"
        }
      ]
    ],
    "collectCoverageFrom": [
      "src/server/features/**/*.{ts,tsx}",
      "src/ui/components/**/*.{ts,tsx}",
      "src/ui/redux/**/*.{ts,tsx}",
      "src/ui/validators/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*(tests|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testResultsProcessor": "jest-bamboo-reporter"
  }
}
