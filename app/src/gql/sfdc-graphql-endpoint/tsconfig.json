{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",

        "sourceMap": true,
        "declaration": true,

        "moduleResolution": "Node",
        "esModuleInterop": true,

        "strict": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
