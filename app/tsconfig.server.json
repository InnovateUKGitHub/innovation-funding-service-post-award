{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["DOM.Iterable", "DOM", "ES2020"],
    "allowJs": true,
    // "checkJs": true,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "declaration": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"],
      "@framework/*": ["src/framework/*"],
      "@ui/*": ["src/ui/*"],
      "@util/*": ["src/framework/util/*"],
      "@content/*": ["src/content/*"],
      "@tests/*": ["tests/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
