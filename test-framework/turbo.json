{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "cypress": {
      "persistent": true,
      "env": ["TEST_SALESFORCE_SANDBOX"],
      "dependsOn": ["build"]
    },
    "open": {
      "persistent": true,
      "cache": false,
      "env": [
        "PLAYWRIGHT_BROWSERS_PATH",
        "DISPLAY",
        "BASIC_AUTH",
        "TEST_SALESFORCE_SANDBOX",
        "SALESFORCE_PRIVATE_KEY",
        "SALESFORCE_USERNAME",
        "SALESFORCE_CLIENT_ID",
        "SALESFORCE_CONNECTION_URL"
      ],
      "dependsOn": ["build"]
    },
    "run": {
      "persistent": true,
      "cache": false,
      "env": [
        "PLAYWRIGHT_BROWSERS_PATH",
        "BASIC_AUTH",
        "TEST_SALESFORCE_SANDBOX",
        "SALESFORCE_PRIVATE_KEY",
        "SALESFORCE_USERNAME",
        "SALESFORCE_CLIENT_ID",
        "SALESFORCE_CONNECTION_URL"
      ],
      "dependsOn": ["build"]
    }
  }
}
