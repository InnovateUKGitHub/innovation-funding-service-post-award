{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "cypress": {
      "persistent": true,
      "env": ["TEST_SALESFORCE_SANDBOX"],
      "dependsOn": ["build"]
    },
    "open": {
      "persistent": true,
      "env": ["TEST_SALESFORCE_SANDBOX"],
      "dependsOn": ["build"]
    }
  }
}
